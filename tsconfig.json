{
  "compilerOptions": {
    /* Basic Options */
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-native",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "root/*": ["*"],
      "core/*": ["src/core/*"],
      "commons/*": ["src/core/commons/*"],
      "entities/*": ["src/core/entities/*"],
      "gateway/*": ["src/core/gateway/*"],
      "services/*": ["src/core/services/*"],
      "adapters/*": ["src/core/adapters/*"],
      "useCases/*": ["src/core/useCases/*"],
      "presentations/*": ["src/presentations/*"],
      "components/*": ["src/presentations/components/*"],
      "navigators/*": ["src/presentations/navigators/*"],
      "screens/*": ["src/presentations/screens/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}